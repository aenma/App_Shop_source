<script>
$(".button-collapse").sideNav();
/**
 * 가입버튼
 */
$("#joinBtn").on('click', function(){

	var userName = $("#userName").val();
	if(!userName){
		 Materialize.toast('이름을 입력하세요.', 4000);
		 return;
	}	
		
	var userClass = $("#userClass").val();
	if(!userClass){
		 Materialize.toast('학과를 입력하세요.', 4000);
		 return;
	}
	
	var pwd = $("#pwd").val();
	var rePwd = $("#rePwd").val();

	if(pwd != rePwd){
		 Materialize.toast('비밀번호가 다릅니다.', 4000);
		 return;
	}		
	
	var phone = $("#phone").val();
	if(!phone){
		 Materialize.toast('전화번호를 입력하세요.', 4000);
		 return;
	}			
	
	var userImage = $("#userImage").val();	
	

	$.ajax({
		  type: "POST",
		  dataType: 'jsonp',								// 크로스 도메인이유로 jsonp 처리		  			  
		  url: "http://dymarket.dothome.co.kr/shop/server/modify_user.php",
		  data: {
		  	userImage : userImage,
		  	userName : userName,
		  	userClass : userClass,
		  	pwd : pwd,
		  	phone : phone
		  },
		  
		  success: function(data){
		  	if(data.success == 'success'){
		  		alert("수정 되었습니다.");
		  	}else{
		  		alert("수정 실패!!");
		  	}
		  	// 메인페이지로 이동
		  	setTimeout(function(){
		  		window.location.href ='index.html';
		  	}, 2000);
		  		
		  }
	});	
		

			
});

$("#search").on('keydown', function(e){
	
	if(e.keyCode == 13){
		if($(this).val().length <2){
			alert("두글자 이상 입력하세요.");
			return;
		}			
		window.location.href="search.html?q=" + $(this).val();	
	}
});			

